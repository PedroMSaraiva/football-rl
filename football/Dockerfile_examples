ARG DOCKER_BASE
FROM $DOCKER_BASE
ARG DEVICE

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get --no-install-recommends install -yq git cmake build-essential \
  libgl1-mesa-dev libsdl2-dev \
  libsdl2-image-dev libsdl2-ttf-dev libsdl2-gfx-dev libboost-all-dev \
  libdirectfb-dev libst-dev mesa-utils xvfb x11vnc \
  python3-pip

# Install specific versions of setuptools and wheel compatible with gym 0.21.0
RUN python3 -m pip install --no-cache-dir wheel==0.37.0 setuptools==57.5.0

# Install gym 0.21.0 manually before installing gfootball to avoid setuptools compatibility issues
RUN python3 -m pip install --no-cache-dir 'gym<=0.21.0'

RUN python3 -m pip install --no-cache-dir stable-baselines3[extra]

# Baselines is archived and no longer maintained - commenting out
# If needed, you can use stable-baselines3 instead: pip install stable-baselines3
# RUN python3 -m pip install --no-cache-dir git+https://github.com/openai/baselines.git@master#
COPY . /gfootball
RUN cd /gfootball && python3 -m pip install --no-deps .
# Reinstall dependencies after to ensure compatibility
RUN python3 -m pip install --no-cache-dir -r /gfootball/requirements.txt || true

WORKDIR '/gfootball'
